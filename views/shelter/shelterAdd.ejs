<%- include("../includes/header.ejs", {title:"Add New Shelter"}); %>
<h1>Add New Shelter</h1>
<form action="/shelter/insert" method="get">
    Shelter: <input id="shelter_name" name="shelter_name" type="text" />
    <br/>
    <br/>
    Address
    <br/>
    <select id="address_id" name="address_id" multiple="multiple">
        <% for(var i=0; shelter_address.length > i; i++) { %>
        <option value="<%= shelter_address[i].address_id %>"><%= shelter_address[i].street + ', ' + shelter_address[i].state + ', ' +
            shelter_address[i].zip_code %></option>
        <% } %>
    </select>

    <script type="text/javascript">
        $(document).ready(function(){
            $('#address_id').multiselect();
        });
    </script>

    <br />
    <input type="submit" />
</form>

<%- include("../includes/footer.ejs"); %>
<%- include("../includes/header.ejs", {title: "Update " + shelter.shelter_name});%>

<h1>Update <%= shelter.shelter_name%></h1>
<form action="/shelter/update" method="get">
    <input type="hidden" id="shelter_id" name="shelter_id" value="<% shelter.shelter_id%>">
    School Name: <input id="shelter_name" name="shelter_name" type="text" value="<%= shelter.shelter_name%>"/>
    <br />
    <br />
    Address <br />
    <select id="address_id" name="address_id">
        <% for(var i=0; shelter_address.length > i; i++) {
            var selected = "";

            if(shelter_address[i].shelter_id != null) {
                selected = "selected";
            }
        %>
        <option value="<% shelter_address[i].address_id %>" <%= selected %> ><%= shelter_address[i].street + ', ' + shelter_address[i].state
                + ', ' + shelter_address[i].zip_code %></option>
        <% } %>
    </select>



    <br />

    <input type="submit" />
</form>

<%- include("../includes/footer.ejs");%>

</html>
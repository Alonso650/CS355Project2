<%- include("../includes/header.ejs", {title: "Update " + skill.skill_name}); %>

<h1>Update <%= skill.skill_name%></h1>
<form action="/skill/update" method="get">
    Skill Name: <input id="skill_name" name="skill_name" type="text" value="<%= skill.skill_name%>"/>
    <br/>
    <br/>
    Skill Description: <input id="description" name="description" type="text" value="<%= skill.description%>" />

    <script type="text/javascript">
        $(document).ready(function() {
            $('#skill_id').multiselect();
        });
    </script>

    <br/>

    <input type="submit" />

</form>

<%- include("../includes/footer.ejs"); %>
</html>
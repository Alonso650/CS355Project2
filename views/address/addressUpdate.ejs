<%- include("../includes/header.ejs", {tittle: "Update " + address.street}); %>

<h1>Update <%= address.street%></h1>
<form action="/address/update" method="get">
      <input type="hidden" id="address_id" name="address_id" value="<% address.address_id%>">
    Address St: <input id="street" name="street" type="text" value="<%= address.street %>"/>
    <br/>
    <br/>

    Address <br/>
    <select id="address_id" name="address_id" multiple="multiple">
        <% for(var i=0; address.length > i; i++ ) {
            var selected = "";

            if(address[i].address_id != null) {
                selected = "selected";
            }
        %>
        <option value="<%= address[i].address_id %>"<%= selected %> ><%= address[i].street +', ' + address[i].zip_code%></option>
        <% } %>
    </select>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#address_id').multiselect();
        });
    </script>

    <br/>

    <input type="submit" />

</form>

<%- include("../includes/footer.ejs"); %>

</html>